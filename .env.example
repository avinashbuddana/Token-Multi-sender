# Copy this file to .env and fill in your values

# Private key of the sender wallet (DO NOT commit your real key)
PRIVATE_KEY=0xYOUR_PRIVATE_KEY

# BSC Testnet RPC endpoint
RPC_URL=https://bsc-testnet.bnbchain.org

# Optional: fraction of block gas limit to use per tx (0.1 - 1.0)
MAX_GAS_FRACTION=0.8

# Asset configuration
# ERC20 token address (required for ERC20 mode)
TOKEN_ADDRESS=0xYourKLINKTokenAddress

# BatchSender contract address (required)
BATCH_SENDER_ADDRESS=0xYourBatchSenderAddress

# Optional: override token decimals if decimals() is unavailable
# DECIMALS=18

# Native mode: set to true to send native BNB instead of ERC20
# NATIVE=false

# Input file path (defaults to ./samples/csvjson.json if not set)
INPUT_FILE=./samples/csvjson.json

# Rate limiting and retries (use when using providers like Infura)
# Limit approximate requests per second (set 0 to disable pacing)
RATE_LIMIT_RPS=5
# Or set a fixed interval in ms between requests (overrides RPS if set)
# RATE_LIMIT_INTERVAL_MS=200
# Retry settings for transient/rate limit errors
RETRY_MAX_ATTEMPTS=5
RETRY_BASE_MS=500
RETRY_MAX_MS=5000
# Sleep between submitted transactions to avoid provider throttling
SLEEP_BETWEEN_TX_MS=750

# Checkpoint/resume to avoid resending already-sent entries
# Path to checkpoint file (created/updated automatically)
CHECKPOINT_FILE=.multisend-checkpoints.json
# Set to true to disable checkpoints entirely
# DISABLE_CHECKPOINTS=false